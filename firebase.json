{
  "hosting": {
    "public": "out",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "**",
        "destination": "/portfolio.html"
      },
      {
        "source": "**",
        "destination": "/blog.html"
      }
    ]
  }
}
